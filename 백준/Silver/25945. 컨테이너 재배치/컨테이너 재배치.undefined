    //         cnt++;
    //     }
    //     else if (arr[i] == height + 1)
    //         cnt++;
    // }
    // // cnt := longer container 개수
    // ans += abs(cnt - numLonger);
    // cout << ans;
}

int main() {
    setup();
    preprocess();
    ll t = 1;
    // cin >> t;
    for (ll test=1; test<=t; test++) {
        solve();
    }
