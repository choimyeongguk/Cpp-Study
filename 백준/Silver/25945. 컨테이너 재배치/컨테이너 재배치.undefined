void preprocess() {
    ll i, j, k;
}

void solve() {
    ll i, j, k;
    ll N; cin >> N;
    ll sum = 0;
    vl arr(N);
    for (auto& e : arr) {
        cin >> e;
        sum += e;
    }

    ll height = sum / N;
    ll numLonger = sum % N;
    ll numShorter = N - numLonger;

    ll ans = 0;
    for (i=0; i<N; i++) {
        if (arr[i] > height) {
            if (numLonger) {
                ans += arr[i] - height - 1;
                numLonger--;
            }
            else ans += arr[i] - height;
        }
    }
    cout << ans;
    // ll ans = 0;
    // ll cnt = 0;
